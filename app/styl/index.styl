card_border = 2px solid #45A29E

.images 
    display: flex
    flex-wrap: wrap
    justify-content: space-evenly
    align-items: stretch
    gap 10px
    padding: 20px 0


.image-card
    width: 200px
    padding: 3px
    border: card_border
    background-color: #282e70

    &:hover
        transform: scale(1.5)
    transition: 0.5s

    & img
        width: 100%
        height: 200px
    
.card-link
    background-color: white
    display: inline-block
    border: 2px solid black
    padding: 5px
    border-radius: 15px
    text-decoration: none
    color: black


img
    width: 100%
    height: 100%


.info
    display: flex
    flex-wrap: wrap


.info-header
    width: 20%


.info-text
    width: 80%
    font-size: 1.5em

    & p
        text-indent: 3em


.articles 
    display: flex
    gap: 10px
    flex-wrap: wrap
    justify-content: space-evenly

    & .article-card
        width: 200px
        border: card_border

        & .article-card-title
            background-color: black
            text-align: center

            & h2
                margin: 0px
                padding: 5px
        
        & .article-card-content
            padding: 5px

@media (max-width 600px)
    .image-card,
    .info-header,
    .info-text
        width: 100%
    
    .image-card 
        & img
            height: auto
        
        &:hover
            transform: none
        