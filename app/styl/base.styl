body 
	background-color #1F2833
	font 14px arial
	margin 0

header
	background-color: #0B0C10

active_color = #66FCF1 
unactive_color = #45A29E
.menu_item
	text-decoration none
	padding 5px
	background-color: unactive_color
	color: black

	&__active
		background-color: active_color;
	
	&:hover
		background-color: active_color;

.menu
	display flex
	justify-content flex-start
	font-weight bold
	flex-wrap wrap
	gap: 10px
	padding: 10px

.menu-banner img
	width: 100%
	height: 100%

.main 
	min-width 600px
	width 80%
	background-color #282e70
	margin auto

.content
	color: white
	padding: 0 5px


@media (max-width: 600px)
	.main
		min-width: 0px
		width: 100%


